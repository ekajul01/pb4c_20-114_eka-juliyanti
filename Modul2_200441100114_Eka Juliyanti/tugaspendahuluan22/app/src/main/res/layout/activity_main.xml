<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="15dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="18dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/textNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Masukkan nama anda" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Gender"
        android:textSize="18dp"
        android:textColor="#000000" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="radioGroup">

        <RadioButton
            android:id="@+id/rbWanita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wanita"/>

        <RadioButton
            android:id="@+id/rbPria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pria"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Hobi"
        android:textSize="18dp"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/cbCoding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coding"
        android:onClick="printHobi"/>

    <CheckBox
        android:id="@+id/cbReading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reading"
        android:onClick="printHobi"/>

    <CheckBox
        android:id="@+id/cbTravelling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Travelling"
        android:onClick="printHobi"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="end">

        <Button
            android:id="@+id/imgButtonCancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#dfdfdf"/>

        <Button
            android:id="@+id/imgButtonAdd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#dfdfdf" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>